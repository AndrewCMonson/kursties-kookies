<div class="container">
    <div class="d-flex flex-wrap">
    <h1 class="text-center  mx-auto my-auto">Shopping Cart</h1>
    {{#if renderedCartItems}}
    <div class="d-flex flex-wrap justify-content-around align-items-center mx-auto my-auto">
        <h3 class="text-center mx-auto my-auto pr-3">Total (with tax): ${{calculate_order_total renderedCartItems}}</h3>
        <button class="btn btn-primary" id="checkoutBtn">Checkout</button>
        
    {{/if}}
    </div>
    
</div>

<div class="row justify-content-center pt-3">
        {{#if renderedCartItems}}
        <div class="row col products justify-content-around align-items-center">
            {{#each renderedCartItems as |item|}}
            {{> cart-item-details }}
            {{/each}}
        </div>
        {{else}}
        <div class="text-center">
            <h2>Your cart is empty</h2>
            <a href="/products" class="btn btn-outline-dark">Go to products</a>
        </div>
        {{/if}} 
</div>
<div class="modal fade" id="removedSuccessfullyModal" tabindex="-1" aria-labelledby="removedSuccessfullyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="removedSuccessfullyModalLabel">Removed Successfully</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                The item has been successfully removed from the cart.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
