<div class='container'>
	<div class='row mx-auto my-auto pt-5 justify-content-center'>
		<form class='col-6 col-md-4 login-form'>
			<h1 class='text-center'>Login</h1>

			<div class='mb-3'>
				<label for='inputEmail' class='form-label'>Email address</label>
				<input type='text' class='form-control form-control-sm' id='inputEmail' aria-describedby='emailHelp' />
				<div id='emailHelp' class='form-text'>We'll never share your email with
					anyone else.</div>
			</div>
			<div class='mb-3'>
				<label for='inputPassword' class='form-label'>Password</label>
				<input type='password' class='form-control' id='inputPassword' />
			</div>
			<div id='loginAlertDiv'></div>
			<div class='d-flex align-items-center justify-content-center flex-wrap mx-auto my-auto'>
				<button type='submit' class='btn btn-primary' id='loginBtn'>Submit</button>
				<a href='/signup' class='text-center pt-1 ms-auto'>Don't have an
					account? Sign up here!</a>
			</div>
		</form>
	</div>
</div>
<script type='module' src='/js/login.js'></script>