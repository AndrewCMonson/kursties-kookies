<div>
    <div>
        <h1 class='text-center p-3'>Featured Products</h1>
    </div>
    <div class="container">
        <div class="row justify-content-center products">
            {{#each products as |product|}}
            {{> product-details}}
            {{/each}}
        </div>
    </div>
    <div class="text-center p-3">
        <a href="/products" class="btn btn-outline-dark mb-3">Browse our entire collection</a>
    </div>
</div>
<div class="container">
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="card bg-dark text-white carousel-card">
                    <img class="card-img" src="/images/molasses-caro.jpg" alt="Card image">
                    <div class="card-img-overlay">
                        <h4 class="card-title carousel-title">Cookie of the Month!</h4>
                        <h5 class="card-text carousel-text">Signup to join our Cookie of the Month Club for exclusive
                            discounts and recieve our newsletter!</h5>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="card bg-dark text-white carousel-card">
                    <img class="card-img" src="/images/peanut-butter-caro.jpg" alt="Card image">
                    <div class="card-img-overlay">
                        <h4 class="card-title carousel-title">Find us on our Socials!</h4>
                        <div class="row w-25">
                            <a href='www.facebook.com' class="col"><i class="fa-brands fa-facebook-f fa-2xl"
                                    style="color: #ffffff;"></i></a>
                            <a href='www.youtube.com' class="col"><i class="fa-brands fa-youtube fa-2xl"
                                    style="color: #ffffff;"></i></a>
                            <a href='www.instagram.com' class="col"><i class="fa-brands fa-instagram fa-2xl"
                                    style="color: #ffffff;"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="card bg-dark text-white carousel-card">
                    <img class="card-img" src="/images/white-mac-caro.jpg" alt="Card image">
                    <div class="card-img-overlay">
                        <h4 class="card-title carousel-title">New Youtube Video!</h4>
                        <h5 class="card-text carousel-text">This week, we share our favorite kitchen tips and tricks!
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>