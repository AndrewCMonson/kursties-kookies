<div class='container'>
	<div class='row mx-auto my-auto justify-content-center'>
		<form class='col-6 col-md-4 signup-form'>
			<h1 class='text-center'>Sign Up</h1>
			<div class='mb-3'>
				<label for='signUpEmail' class='form-label'>Email address</label>
				<input type='text' class='form-control form-control-sm signUpInput' id='signUpEmail'
					aria-describedby='emailHelp' />
				<div id='emailHelp' class='form-text'>We'll never share your email with
					anyone else.</div>
			</div>
			<div class='mb-3'>
				<label for='signUpUsername' class='form-label'>Username</label>
				<input type='text' class='form-control form-control-sm signUpInput' id='signUpUsername'
					aria-describedby='usernameHelp' />
			</div>
			<div class='mb-3'>
				<label for='signUpPassword' class='form-label'>Password</label>
				<input type='password' class='form-control signUpInput' id='signUpPassword' />
			</div>
			<div class='mb-3'>
				<label for='confirmPassword' class='form-label signUpInput'>Confirm
					Password</label>
				<input type='password' class='form-control' id='confirmPassword' />
			</div>
			<div id='signUpAlertDiv'></div>
			<div class="d-flex align-items-center justify-content-center flex-wrap mx-auto my-atuo">
				<button type='submit' class='btn btn-primary' id='signUpBtn'>Submit</button>
				<a href='/login' class='text-center pt-1 ms-auto'>Already have an
					account? Login here!</a>
			</div>
		</form>
	</div>
	<div class="modal fade" id="signUpModal" tabindex="-1" aria-labelledby="signUpModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h1 class="modal-title fs-5" id="signUpModalLabel">Thank you for signing up!</h1>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					Please login to continue!
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" id="signUpModalClose"
						data-bs-dismiss="modal">Close</button>
				</div>
			</div>
		</div>
	</div>
</div>

<script type='module' src='/js/signup.js'></script>