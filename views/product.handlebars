<div class="row justify-content-md-center p-3">
    <div class="col-md-5">
        <img class="img-fluid cookie-img"src="/images/{{product.filename}}" alt="{{product.name}}" />
    </div>
    <div class="card product-card col-md-4" style="width: 18rem">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">{{product.name}}</li>
            <li class="list-group-item">${{product.price}}</li>
            <li class="list-group-item">{{check_stock product.stock}}</li>
            <li class="list-group-item">
                <button>Add to cart</button>
            </li>
        </ul>
    </div>
</div>