
<section class="container">
    <div class="row justify-content-center p-3">
        <div class="col-md-5">
            <img class="img-fluid cookie-img" src="/images/{{product.filename}}" alt="{{product.product_name}}" />
        </div>
        <div class="card rounded col-md-4" style="width: 18rem">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">{{product.product_name}}</li>
                <li class="list-group-item">${{product.price}}</li>
                <li class="list-group-item">{{check_stock product.stock}}</li>
                <li class="list-group-item">
                    <button class="addToCartButton" data-product-id="{{product.id}}" data-user-id="{{userId}}">Add to cart</button>
                </li>
            </ul>
        </div>
    </div>
    <div class="row justify-content-center">
        <div>
            <h1 class="text-center">You might like</h1>
        </div>
        <div class="row row-cols-auto">
            {{#each additionalProducts as |additionalProduct|}}
                {{> product-details}}
            {{/each}}
        </div>
    </div>
</section>
